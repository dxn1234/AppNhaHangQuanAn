<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:background="@color/dotham"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize">
        <TextView
            android:textSize="15sp"
            android:textColor="@android:color/white"
            android:text="Viết bình luận"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textSize="15sp"
            android:id="@+id/txt_dangbinhluan"
            android:padding="5dp"
            android:textColor="@android:color/white"
            android:text="Đăng"
            android:layout_marginRight="5dp"
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </android.support.v7.widget.Toolbar>
    <LinearLayout
        android:padding="5dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txt_tenquanan"
            android:textStyle="bold"
            android:textSize="15sp"
            android:text="Gogi house"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/txt_diachiquanan"
            android:text="332 tran hung dao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <EditText
        android:id="@+id/edt_tieudebinhluan"
        android:hint="Tiêu đề"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <View
        android:background="@color/backgroundcolortrangchu"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <EditText
        android:id="@+id/edt_noidungbinhluan"
        android:layout_weight="1"
        android:gravity="top"
        android:hint="Bình luận"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>